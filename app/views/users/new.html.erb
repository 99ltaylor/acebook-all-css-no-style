<%= form_for @user do |f|  %>

<div class="row mb-3 mt-5 mx-auto" style="width: 50%;">
  <h1> Sign up </h1>
    <%= f.label :first_name, class: "col-md-4 mt-2 control-label" %>
    <%= f.text_field :first_name, class: "form-control" %><br>
    <%= f.label :last_name, class: "col-md-4 mt-2 control-label"%>
    <%= f.text_field :last_name, class: "form-control" %><br>
    <%= f.label :email, class: "col-md-4 mt-2 control-label"%>
    <%= f.text_field :email, class: "form-control"%><br>
    <%= f.label :password, class: "col-md-4 mt-2 control-label"%>
    <%= f.password_field :password, class: "form-control"%>
    <%= f.submit "Create Account",  class: "btn btn-default btn-primary mt-4"%>
  </div>

<%end%>